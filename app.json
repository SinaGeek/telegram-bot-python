{
    "name": "Telegram FPS Bot",
    "description": "A powerful Telegram bot that uploads files directly to Google Drive",
    "repository": "https://github.com/yourusername/telegram-fps-bot",
    "logo": "https://via.placeholder.com/300x300/4CAF50/FFFFFF?text=ðŸ¤–",
    "keywords": [
        "telegram",
        "bot",
        "google-drive",
        "file-upload",
        "python"
    ],
    "success_url": "/",
    "env": {
        "BOT_TOKEN": {
            "description": "Your Telegram bot token from @BotFather",
            "required": true
        },
        "FLASK_SECRET_KEY": {
            "description": "Secret key for Flask sessions",
            "generator": "secret"
        },
        "LOG_LEVEL": {
            "description": "Logging level (DEBUG, INFO, WARNING, ERROR)",
            "value": "INFO"
        }
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "basic"
        }
    },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ],
    "addons": [
        {
            "plan": "heroku-postgresql:mini"
        }
    ]
}